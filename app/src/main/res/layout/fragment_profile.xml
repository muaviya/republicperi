<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/ic_user_avatar"/>

        <Button
            style="@style/BorderlessBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_photo_btn"
            android:layout_marginLeft="16dp"
            android:text="Изменить фотографию"
            android:theme="@style/BorderlessBtn"/>
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email_et"
            style="@style/auth_et_style"
            android:hint="@string/profile_email_hint"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/name_et"
            style="@style/auth_et_style"
            android:hint="Имя"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/surname_et"
            style="@style/auth_et_style"
            android:hint="Фамилия"
            android:inputType="textPersonName"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/last_password"
            style="@style/auth_et_style"
            android:hint="Старый пароль"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/new_password"
            style="@style/auth_et_style"
            android:hint="Новый пароль"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        style="@style/CustomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:id="@+id/saveBtn"
        android:layout_marginTop="36dp"
        android:theme="@style/LoginBtn"/>

</LinearLayout>